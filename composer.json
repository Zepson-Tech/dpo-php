{
    "name": "zepson/dpo-php",
    "description": "A simple package to add DPO API to your laravel application and make payment processing much easy",
    "keywords": [
        "zepson",
        "dpo-laravel"
    ],
    "homepage": "https://github.com/zepson/dpo-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Zepson Technologies",
            "email": "ujumbe@zepson.co.tz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Zepson\\Dpo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zepson\\Dpo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
